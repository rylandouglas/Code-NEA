import customtkinter
import sqlite3
from tkinter import *
from tkinter import messagebox
#Window Resolution
app = customtkinter.CTk()
app.title("login")
app.geometry("1920x1080")
app.config(bg="#257534")
app.attributes("-fullscreen",True)
#Text Fonts
font1= ("Helvetica",25,"bold")
font2= ("Arial",17,"bold")
font3= ("Arial",13,"bold")
font4= ("Arial",13,"bold")



# Function to close the window
def close_window():
    app.destroy()



# Create a close button
close_button = customtkinter.CTkButton(app, text="X", command=close_window)
close_button.pack()




app.mainloop()




app.mainloop()
